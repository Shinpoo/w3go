WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1

        GridLayout:
            cols: 1
            rows: 2
            Label:
                text: "Password: "

            TextInput:
                id: passw
                multiline: True

        Button:
            text: "Connect"
            on_release:
                app.root.current = "second" if passw.text == "slm" else "main"
                root.manager.transition.direction = "left"


<SecondWindow>:
    name: "second"
    output: output
    GridLayout:
        cols: 1
        rows: 2
        Label:
            id: output
            text: "Results"
        Button:
            text: "Optimize"
            on_press:
            
                root.update_label("Solving")    
            on_release:
                root.optimize()
